            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: exporter",
            "type": "python",
            "request": "launch",
            "program": "./notion_exporter.py",
            "args": ["${file}"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
